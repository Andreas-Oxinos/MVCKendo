@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-xs-12">
        <div class="well well-lg" style="text-align:center;">
            <h1>Telerik MVC Grid</h1>
        </div>
    </div>
</div>


@(Html.Kendo().Grid<Domain.ViewModels.PersonVM>()
    .Name("Grid")
    .DataSource(d => d
        .Ajax()
            .Model(model =>
            {
                model.Id(p => p.Id);
                model.Field(p => p.Id).Editable(false);
            })
            .Create(c => c.Action("Person_Create", "Persons"))
            .ServerOperation(false)
            .Read(r => r.Action("Get_Data", "Persons"))
            .Update(u => u.Action("Person_Update", "Persons"))
            .Destroy(destroy => destroy.Action("Person_Delete", "Persons"))
    )
    .Columns(columns =>
    {
        columns.Bound(p => p.Id).Visible(false);
        columns.Bound(p => p.Name);
        columns.Bound(p => p.Surname);
        columns.Command(commands =>
        {
            commands.Edit();
            commands.Destroy();
        }).Title("Commands").Width(200);
    })
    .ToolBar(toolbar => toolbar.Create())
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable()
    .Sortable()

)

@section scripts {

}